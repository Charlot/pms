<%= form_for(@resource_group) do |f| %>
    <% if @resource_group.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@resource_group.errors.count, "error") %> prohibited this resource_group from being
            saved:</h2>

          <ul>
            <% @resource_group.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :type %><br>
      <%= f.select(:type, resource_group_type_options, {include_blank: false}) %>
    </div>

    <div class="field">
      <%= f.label :nr %><br>
      <%= f.text_field :nr %>
    </div>

    <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :description %><br>
      <%= f.text_field :description %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
