<h1>Listing resource_group_parts</h1>
<div>
  <h5>ResourceGroupTool: <%= @resource_group_tool.nr %></h5>
</div>
<table>
  <thead>
    <tr>
      <th>Part</th>
      <th>Resource group</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @resource_group_parts.each do |resource_group_part| %>
      <tr>
        <td><%= resource_group_part.part %></td>
        <td><%= resource_group_part.resource_group %></td>
        <td><%= link_to 'Show', resource_group_part %></td>
        <td><%= link_to 'Edit', edit_resource_group_part_path(resource_group_part) %></td>
        <td><%= link_to 'Destroy', resource_group_part, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

