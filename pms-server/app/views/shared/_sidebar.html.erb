<% if sidebar_info(current_model).count > 0 %>
    <nav class="navbar navbar-default navbar-static-top">
      <ul class="nav navbar-nav">
        <% sidebar_info(current_model).each do |menu| %>
            <% if menu[:roles].include?(current_user.role) %>
                <li class="<%= 'active' if current_page?({controller: current_controller, action: menu[:action]}) %>">
                  <%= link_to menu[:content], controller: current_controller, action: menu[:action] %>
                </li>
            <% end %>
        <% end %>
      </ul>
    </nav>
<% end %>