<% process_template=@process_entity.process_template %>

<% if ProcessType.semi_auto?(process_template.type) %>
    Default Wire No:
    <%= render 'custom_fields/format/label', {field: process_template.field_default_wire_nr,value:@process_entity.value_default_wire_nr} %>
    <%= simple_format(@process_entity.template_text) if process_template.template %>
<% elsif ProcessType.auto?(process_template.type) %>
    <div>
      <p>Wire:</p>
      <table class="table">
        <tr>
          <td colspan="2">
            Default Wire No:
            <%= render 'custom_fields/format/label', {field: process_template.field_default_wire_nr,value:@process_entity.value_default_wire_nr} %>
          </td>
        </tr>
        <tr>
          <td colspan="2">
            Component:
            <%= render 'custom_fields/format/label', {field: process_template.field_wire_nr,value:@process_entity.value_wire_nr} %>
          </td>
        </tr>
        <tr>
          <td colspan="2">
            Qty factor:
            <%= render 'custom_fields/format/label', {field: process_template.field_wire_qty_factor,value:@process_entity.value_wire_qty_factor} %>
          </td>
        </tr>
        <tr>
          <td colspan="2">
            Bundle Qty:
            <%= render 'custom_fields/format/label', {field: process_template.field_default_bundle_qty,value:@process_entity.value_default_bundle_qty} %>
          </td>
        </tr>
      </table>
      <p>Terminator:</p>
      <table class="table">
        <tr>
          <td>T1:
            <%= render 'custom_fields/format/label', {field: process_template.field_t1,value:@process_entity.value_t1} %>
          </td>
          <td>T2:
            <%= render 'custom_fields/format/label', {field: process_template.field_t2,value:@process_entity.value_t2} %>
          </td>
        </tr>
        <tr>
          <td>T1 Qty factor:
            <%= render 'custom_fields/format/label', {field: process_template.field_t1_qty_factor,value:@process_entity.value_t1_qty_factor} %>
          </td>
          <td>T2 Qty factor:
            <%= render 'custom_fields/format/label', {field: process_template.field_t2_qty_factor,value:@process_entity.value_t2_qty_factor} %>
          </td>
        </tr>
        <tr>
          <td>T1 Default Strip Length:
            <%= render 'custom_fields/format/label', {field: process_template.field_t1_default_strip_length,value:@process_entity.value_t1_default_strip_length} %>
          </td>
          <td>T1 Strip Length:
            <%= render 'custom_fields/format/label', {field: process_template.field_t1_strip_length,value:@process_entity.value_t1_strip_length} %>
          </td>
          <td>T2 Default Strip Length:
            <%= render 'custom_fields/format/label', {field: process_template.field_t2_default_strip_length,value:@process_entity.value_t2_default_strip_length} %>
          </td>
          <td>T2 Strip Length:
            <%= render 'custom_fields/format/label', {field: process_template.field_t2_strip_length,value:@process_entity.value_t2_strip_length} %>
          </td>
        </tr>
      </table>
      <p>Seal:</p>
      <table class="table">
        <tr>
          <td>S1:
            <%= render 'custom_fields/format/label', {field: process_template.field_s1,value:@process_entity.value_s1} %>
          </td>
          <td>S2:
            <%= render 'custom_fields/format/label', {field: process_template.field_s2,value:@process_entity.value_s2} %>
          </td>
        </tr>
        <tr>
          <td>S1 Qty factor:
            <%= render 'custom_fields/format/label', {field: process_template.field_s1_qty_factor,value:@process_entity.value_s1_qty_factor} %>
          </td>
          <td>S2 Qty factor:
            <%= render 'custom_fields/format/label', {field: process_template.field_s2_qty_factor,value:@process_entity.value_s2_qty_factor} %>
          </td>
        </tr>
      </table>
    </div>
<% end %>