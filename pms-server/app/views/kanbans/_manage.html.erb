<% content_for :javascript_includes do %>
    <%= javascript_include_tag "printer" %>
<% end %>
<div class="btn-group btn-group-sm" role="group" aria-label="...">
  <button class="btn btn-default print" type="button" id="<%= kanban.id %>" kanban_type="<%= kanban.ktype %>">打印</button>
  <%= link_to '编辑', edit_kanban_path, class: "btn btn-default" %>
  <%= link_to '发布', release_kanban_path(kanban), class: "btn btn-info", method: :post %>
  <%= link_to '锁定', lock_kanban_path(kanban), class: "btn btn-danger", method: :post %>
  <%= link_to '销毁', discard_kanban_path(kanban), class: "btn btn-warning", method: :delete %>
</div>