<h2><%= @kanban.id%></h2>
<td><%= link_to 'Release',release_kanban_path(@kanban),:method => :post %></td>
<br/>
<td>
  <input id="scan" type="text"/>
</td>

<% content_for :javascript_includes do %>
    <%= javascript_include_tag "kanban" %>
<% end %>

<script type="text/javascript">
  $(document).ready(function(){
      $('body').on('keypress','#scan',function(event){
          if(event.which == 13){
              var code = $("#scan").val();
              pms.kanban.scan(code,function(data){
                  console.log(data);
              })
          }
      })
  })
</script>