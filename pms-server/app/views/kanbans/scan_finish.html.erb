<div>
  <%= link_to "导入销卡", import_to_finish_scan_kanbans_path, class: "btn btn-default" %>
</div>
<div class="row">
  <div class="col-md-5">
    <div class="form-group">
      <div class="row">
        <div class="col-md-6">
          <label>扫描销卡</label>
          <input type="text" id="scan_Kanban_Finish" class="form-control"/>
          <div class="info-warn-div" id="message-div" style="font-size: 20px"></div>
        </div>
      </div>
    </div>
  </div>
</div>
<% content_for :javascript_includes do %>
    <%= javascript_include_tag "kanban" %>
<% end %>
<script type="text/javascript">
    $(document).ready(function () {
        $('#scan_Kanban_Finish').on('keypress', function (event) {
            var kanban_id = $('#scan_Kanban_Finish').val();
            if (kanban_id.length > 0 && event.keyCode == 13) {
                pms.kanban.scan_finish(kanban_id, function (data) {
                    if (data.result) {
//                        swal("销卡成功！");
                        $("#message-div").text(kanban_id + ",销卡成功！");
                    }
                    else {
                        swal(data.content);
                        $("#message-div").text();
                    }
                })
            }
        });
    });
</script>