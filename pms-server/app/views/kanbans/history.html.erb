<div class="row">
  <div class="col-md-10">
    <div class="panel panel-success">
      <div class="panel-heading">
        <h3><%= @kanban.nr%>的历史记录</h3>
      </div>
      <div class="panel-body">
        <ul class="list-group">
          <% @kanban.versions.each do |v|%>
              <li class="list-group-item list-group-item">
                <div class="well">
                <div class="row">
                  <div class="col-md-12">
                    <button class="btn btn-default"><%= v.event%></button> <%= v.created_at.localtime.strftime("%H:%M:%S %Y/%m/%d")%>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-12">
                    <%= v.reify.attributes if v.reify%>
                  </div>
                </div>
                </div>
              </li>
          <%end%>
        </ul>
      </div>
    </div>
  </div>
</div>