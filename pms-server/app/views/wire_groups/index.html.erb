<h1>Listing wire_groups</h1>

<table>
  <thead>
    <tr>
      <th>Group name</th>
      <th>Wire type</th>
      <th>Cross section</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wire_groups.each do |wire_group| %>
      <tr>
        <td><%= wire_group.group_name %></td>
        <td><%= wire_group.wire_type %></td>
        <td><%= wire_group.cross_section %></td>
        <td><%= link_to 'Show', wire_group %></td>
        <td><%= link_to 'Edit', edit_wire_group_path(wire_group) %></td>
        <td><%= link_to 'Destroy', wire_group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

