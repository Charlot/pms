<div class="panel panel-success">
  <div class="panel-heading">
    <h1>生产订单列表</h1>
  </div>
  <div class="panel-body">
    <table class="table">
  <thead>
  <tr>
    <th>Nr</th>
    <th>State</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @production_orders.each do |production_order| %>
      <tr>
        <td><%= production_order.nr %></td>
        <td><%= production_order.state %></td>
        <td><%= link_to 'Show', production_order_production_order_items_path(production_order) %></td>
        <td><%= link_to 'Edit', edit_production_order_path(production_order) %></td>
        <td><%= link_to 'Destroy', production_order, method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>
  </div>
</div>
