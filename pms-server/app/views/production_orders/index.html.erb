
    <table class="table table-bordered table-striped table-hover">
  <thead>
  <tr>
    <th>Nr</th>
    <th>State</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @production_orders.each do |production_order| %>
      <tr>
        <td><%= production_order.nr %></td>
        <td><%= production_order.state %></td>
