<h1>Listing production_orders</h1>

<table class="table">
  <thead>
    <tr>
      <th><%= ProductionOrderDesc::NR%></th>
      <th><%= ProductionOrderDesc::ORDERABLE_ID%></th>
      <th><%= ProductionOrderDesc::ORDERABLE_TYPE%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @production_orders.each do |production_order| %>
      <tr>
        <td><%= production_order.nr %></td>
        <td><%= production_order.orderable_id %></td>
        <td><%= production_order.orderable_type %></td>
        <td></td>
        <td><%= link_to 'Show', production_order %></td>
        <td><%= link_to 'Edit', edit_production_order_path(production_order) %></td>
        <td><%= link_to 'Destroy', production_order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

