        <td><%= link_to 'Show', production_order_handler_item %></td>
        <td><%= link_to 'Edit', edit_production_order_handler_item_path(production_order_handler_item) %></td>
        <td><%= link_to 'Destroy', production_order_handler_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
