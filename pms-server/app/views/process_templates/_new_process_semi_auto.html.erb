<h4><%= @process_template.description %></h4>
<input type="hidden" id="hidden-process_template_id" name="process_entity[process_template_id]" value="<%= @process_template.id %>">
<div>
  <%= template_to_html(@process_template) %>
</div>
<script type="text/javascript">
    $(
            $('.format_part').bind('keyup', function (event) {
                var e = adapt_event(event);
                if (e.keyCode == 13) {
                    var input_names = ['t1', 't2'];
                    var input_name = $(this).attr('id');
                    validate_custom_field_part($(this).attr('field'), $(this).val(), function (data) {
                        if (!data.result) {
                            alert(data.content);
                        }
                        else if ($.inArray(input_name, input_names) > -1) {
                            $("label[id='" + input_name + "_default_strip_length'").text(data.content.strip_length);
                        }
                    });
                }
            })
    )
</script>