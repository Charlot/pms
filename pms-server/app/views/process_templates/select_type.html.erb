<% selected = 0 %>
<%= form_tag new_process_template_path, :method => 'get' do %>
    <div class="box">
      <p>select process type:</p>
      <p>
        <% process_type_options.each do |name, type| %>
            <label style="display:block;"><%= radio_button_tag 'type', type, 1==selected+=1 %> <%= name %></label>
        <% end %>
      </p>
    </div>
    <p><%= submit_tag  'Next &#187;'.html_safe, :name => nil %></p>
<% end %>
