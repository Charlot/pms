<table class="table">
  <thead>
    <tr>
      <th>Nr</th>
      <th>描述</th>
      <th>库位</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @warehouses.each do |warehouse| %>
      <tr>
        <td><%= warehouse.nr%></td>
        <td><%= best_in_place warehouse,:description,as: :input%></td>
        <td><%= link_to '库位', warehouse_positions_path(warehouse)%></td>
        <td><%= link_to 'Show', warehouse %></td>
        <td><%= link_to 'Edit', edit_warehouse_path(warehouse) %></td>
        <td><%= link_to 'Destroy', warehouse, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

