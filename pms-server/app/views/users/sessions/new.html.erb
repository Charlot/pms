<div class="panel panel-success form-signin-panel" xmlns="http://www.w3.org/1999/html">
  <div class="panel-heading">
    <h2 class="panel-title">汽车线束生产控制系统</h2>
  </div>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-horizontal form-signin', role: 'form'}) do |f| %>
      <p>
        <span class="alert error"><%= alert %></span>
      </p>

      <div class="form-group">
        <%= f.label :user_name, '用户名', class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :user_name, autofocus: true, class: 'form-control', value: 'system' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :password, '密 码', class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.password_field :password, autocomplete: "off", class: 'form-control', value: '123456system' %>
        </div>
      </div>
      <!--<div class="form-group" style="margin-left: 20px">-->
        <!--请使用测试帐号：<br/>-->
        <!--<span>用户名：test</span><br/>-->
        <!--<span>密码：123456</span>-->
      <!--</div>-->
      <% if devise_mapping.rememberable? %>
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <div class="checkbox">
                <label>
                  <%= f.check_box :remember_me %> 记住我
                </label>
              </div>
            </div>
          </div>
      <% end %>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit value: '登 录', class: 'btn btn-success btn-lg' %>
        </div>
      </div>
  <% end %>
</div>