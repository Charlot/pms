<h1>Listing custom_fields</h1>

<table class="table">
  <thead>
    <tr>
      <th>Type</th>
      <th>Name</th>
      <th>Field format</th>
      <th>Possible values</th>
      <th>Regexp</th>
      <th>Min length</th>
      <th>Max length</th>
      <th>Is required</th>
      <th>Is for all</th>
      <th>Is filter</th>
      <th>Position</th>
      <th>Searchable</th>
      <th>Default value</th>
      <th>Editable</th>
      <th>Visible</th>
      <th>Multiple</th>
      <th>Format store</th>
      <th>Is query value</th>
      <th>Validate query</th>
      <th>Value query</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @custom_fields.each do |custom_field| %>
      <tr>
        <td><%= custom_field.type %></td>
        <td><%= custom_field.name %></td>
        <td><%= custom_field.field_format %></td>
        <td><%= custom_field.possible_values %></td>
        <td><%= custom_field.regexp %></td>
        <td><%= custom_field.min_length %></td>
        <td><%= custom_field.max_length %></td>
        <td><%= custom_field.is_required %></td>
        <td><%= custom_field.is_for_all %></td>
        <td><%= custom_field.is_filter %></td>
        <td><%= custom_field.position %></td>
        <td><%= custom_field.searchable %></td>
        <td><%= custom_field.default_value %></td>
        <td><%= custom_field.editable %></td>
        <td><%= custom_field.visible %></td>
        <td><%= custom_field.multiple %></td>
        <td><%= custom_field.format_store %></td>
        <td><%= custom_field.is_query_value %></td>
        <td><%= custom_field.validate_query %></td>
        <td><%= custom_field.value_query %></td>
        <td><%= custom_field.description %></td>
        <td><%= link_to 'Show', custom_field %></td>
        <td><%= link_to 'Edit', edit_custom_field_path(custom_field) %></td>
        <td><%= link_to 'Destroy', custom_field, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

