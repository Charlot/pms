<h1>Listing tools</h1>

<table class="table table-bordered table-striped table-hover">
  <thead>
  <tr>
    <th>Nr</th>
    <th>Resource group</th>
    <th>Part</th>
    <th>Mnt</th>
    <th>Used days</th>
    <th>Rql</th>
    <th>Tol</th>
    <th>Rql date</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @tools.each do |tool| %>
      <tr>
        <td><%= tool.nr %></td>
        <td><%= tool.resource_group_tool.nr if tool.resource_group_tool %></td>
        <td><%= tool.part.nr if tool.part %></td>
        <td><%= tool.mnt %></td>
        <td><%= tool.used_days %></td>
        <td><%= tool.rql %></td>
        <td><%= tool.tol %></td>
        <td><%= tool.rql_date %></td>
        <td><%= link_to 'Show', tool %></td>
        <td><%= link_to 'Edit', edit_tool_path(tool) %></td>
        <td><%= link_to 'Destroy', tool, method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tool', new_tool_path %>
