<Window x:Class="PmsNCR.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PMS CLIENT" Height="350" Width="231" Loaded="Window_Loaded" Closing="Window_Closing" ResizeMode="NoResize" Topmost="True">
    <Grid>
        <StackPanel>
            <StackPanel.Background>
                <LinearGradientBrush EndPoint="0,0" StartPoint="0,0">
                    <GradientStop Color="#FF355FF5" Offset="1"/>
                    <GradientStop Color="#FF849DF5" Offset="1"/>
                </LinearGradientBrush>
            </StackPanel.Background>
            <Button Content="物料检查" Height="29" Name="MaterialCheckBtn" Width="171" Margin="10,10,0,10" Click="MaterialCheckBtn_Click" />
            <Button Content="订单预览" Height="29" Name="OrderPreviewBtn" Width="171" Margin="10,10,0,10" Click="OrderPreviewBtn_Click" />
            <Button Content="打印机设置" Height="29" Name="PrinterSettingBtn" Width="171"  Margin="10,10,0,10" Click="PrinterSettingBtn_Click"/>

            <Button Content="机器设置" Height="29" Name="MachineSettingBtn" Width="171"  Margin="10,10,0,10" Click="MachineSettingBtn_Click" />
        </StackPanel>
    </Grid>
</Window>
