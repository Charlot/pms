<Window x:Class="PmsNCR.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PMS CLIENT" Height="350" Width="525" Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid>
        <StackPanel Grid.Row="0" >
            <StackPanel.Background>
                <LinearGradientBrush EndPoint="0,0" StartPoint="0,0">
                    <GradientStop Color="#FF355FF5" Offset="1"/>
                    <GradientStop Color="#FF849DF5" Offset="1"/>
                </LinearGradientBrush>
            </StackPanel.Background>
            <Label Content="PMS 客户端" FontSize="20" Foreground="White" FontWeight="Bold" Margin="10,10,0,0"/>
            
        </StackPanel> 
        <Button Content="物料检查" Height="29" HorizontalAlignment="Left"
                Margin="320,12,0,0" Name="MaterialCheckBtn" VerticalAlignment="Top" Width="171" Click="MaterialCheckBtn_Click" />
        <Button Content="打印机设置" Height="29" HorizontalAlignment="Left"
                Margin="320,270,0,0" Name="PrinterSettingBtn" VerticalAlignment="Top" Width="171" Click="PrinterSettingBtn_Click" />
        <Button Content="订单预览" Height="29" HorizontalAlignment="Left"
                Margin="320,56,0,0" Name="OrderPreviewBtn" VerticalAlignment="Top" Width="171" Click="OrderPreviewBtn_Click" >
        </Button>
    </Grid>
</Window>
